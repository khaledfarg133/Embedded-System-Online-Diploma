#include <stdio.h>

int main(){

	float a,b,c ;
	printf ("enter the three numbers\n");
	scanf("%f%f%f",&a,&b,&c);

	if   ( a>=b && a>=c ) {


		printf (" largest number is %2f\n",a);
	}
	if ( b>a && b>c ) {


		printf (" largest number is %2f\n",b);
	}
	if ( c>a && c>b ) {


		printf (" largest number is %2f\n",c);
	}

	return 0 ;
}

