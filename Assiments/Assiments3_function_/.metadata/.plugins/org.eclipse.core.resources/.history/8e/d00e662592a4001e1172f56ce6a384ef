//_____________________________________ * Source code to find factorial of a number. ________________________



#include<stdio.h>

int factorial (int n);
int main() {
	int n,a;

printf("Enter an positive integer:" );
fflush(stdout); fflush(stdin);
scanf ("%d",&n);
printf("Factorial of %d=%ld ",n, factorial (n) ) ;
return 0;
}

int factorial (int n){
int a;
if(n!=1){
a=n*factorial(n-1);

return a;
}
}

