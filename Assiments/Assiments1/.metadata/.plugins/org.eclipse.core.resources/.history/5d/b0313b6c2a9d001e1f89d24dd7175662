#include <stdio.h>

int main(){

	float a,b,c,d;
	printf ("enter the three numbers\n");
	scanf("%d%d%d",&a,&b,&c);

	if (a>b) {
		d=a;
		printf (" largest number is %d\n",d);
	}
	else if (b<a) {
		d=b;
		printf (" largest number is %d\n",d);
	}

	else if (d>c) {

			printf (" largest number is %d\n",d);
		}
	else if (d<c) {

			printf (" largest number is %d\n",c);
		}





return 0 ;
}
